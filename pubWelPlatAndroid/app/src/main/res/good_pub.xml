<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/smssdk_titlebar_height"
        android:id="@+id/toolbar_normal"
        app:titleTextColor="#ffffff"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
       app:navigationIcon="@drawable/smssdk_back_arrow">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/name"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/mylogo"
            android:id="@+id/image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:id="@+id/instro" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="103dp"
            android:layout_height="match_parent">

            <TextView
                android:text="发布日期："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

            <TextView
                android:text="价格："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:text="新旧程度："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:text="收藏次数："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView10"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:text="品牌："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:text="购买时间："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/pubD" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/price" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/oldLevel" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/favNum" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/brand" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/buyDate" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <Button
            android:text="直接购买"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyBtn"
            android:layout_weight="1"
            android:textStyle="normal|bold" />

        <Button
            android:text="以物换物"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeBtn"
            android:layout_weight="1"
            android:textStyle="normal|bold" />
    </LinearLayout>


</LinearLayout>