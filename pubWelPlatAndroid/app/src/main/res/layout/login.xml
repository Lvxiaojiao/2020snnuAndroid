<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/img_icon_close" />

    <Button
        android:id="@+id/regBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="6dp"
        android:background="@null"
        android:bufferType="normal"
        android:text="注册"
        android:textColor="#4E83D3"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:text="账号密码登录"
        android:textColor="#444444"
        android:textSize="30dp"/>


    <EditText
        android:id="@+id/phoneNo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/txt_title"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="161dp"
        android:hint="请输入手机号"
        android:maxLength="11"
        android:paddingLeft="15dp"
        android:textSize="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/pwd"
        android:layout_alignStart="@+id/pwd" />


    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/phoneNo"
        android:layout_centerHorizontal="true"
        android:hint="请输入密码" />

    <Button
        android:id="@+id/loginBtn"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/pwd"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        android:background="@drawable/selector_btn_login"/>


    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:text="第三方应用登录" />

    <View
        android:layout_width="80dp"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="88dp"
        android:layout_marginLeft="60dp"
        android:background="#A2A2A2"></View>

    <View
        android:layout_width="80dp"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="88dp"
        android:layout_marginLeft="250dp"
        android:background="#A2A2A2"></View>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="77dp"
        android:src="@mipmap/img_icon_qq"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/img_icon_wechat"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="260dp"
        android:src="@mipmap/img_icon_weibo"/>
    <CheckBox
        android:text="管理员"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/pwd"
        android:visibility="gone"
        android:layout_alignLeft="@+id/loginBtn"
        android:layout_alignStart="@+id/loginBtn" />


</RelativeLayout>