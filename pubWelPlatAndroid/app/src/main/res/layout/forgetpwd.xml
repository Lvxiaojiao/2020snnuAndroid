<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tlzn.myapplication.MainActivity">

    <TextView
        android:text="取回密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/getPwdlLabel"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="新密码："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pwdGetLabel"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBaseline="@+id/pwdGet"
        android:layout_alignBottom="@+id/pwdGet"
        android:layout_toLeftOf="@+id/pwdGet"
        android:layout_toStartOf="@+id/pwdGet" />

    <Button
        android:text="开始取回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkCodeGetBtn"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/pwdGet"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="69dp"
        android:id="@+id/pwdGet"
        android:layout_below="@+id/getPwdlLabel"
        android:layout_alignLeft="@+id/getPwdlLabel"
        android:layout_alignStart="@+id/getPwdlLabel" />


</RelativeLayout>
